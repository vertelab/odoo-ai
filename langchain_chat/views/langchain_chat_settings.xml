<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="langchain_chat_settings_view_form" model="ir.ui.view">
        <field name="name">langchain.chat.settings.form</field>
        <field name="model">langchain.chat</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                <header>
                    <h1>LangChain Chat Settings</h1>
                </header>
                    <group>
                        <field name="api_key"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_langchain_chat_settings" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">langchain.chat</field>
        <field name="view_mode">form</field>
        <field name="views" type="xml">
            <view id="langchain_chat_settings_view_form" />
        </field>
    </record>

</odoo>
